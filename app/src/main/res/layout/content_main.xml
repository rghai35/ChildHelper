<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rohitghai.childtracker.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/gradient_main">

    <ImageButton
        android:id="@+id/viewdatabaseimage"
        android:layout_width="180dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/viewdatabase"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/viewdatabasetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Database"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/red" />

    <View
        android:id="@+id/viewdatabaseunderline"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:background="@color/red"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <ImageButton
             android:id="@+id/start"
             android:layout_width="150dp"
             android:layout_height="150dp"
             app:srcCompat="@drawable/startunpressed"
             android:layout_marginRight="23dp"/>


        <ImageButton
             android:id="@+id/stop"
             android:layout_width="150dp"
             android:layout_height="150dp"
             app:srcCompat="@drawable/stoppressed" />

    </LinearLayout>


</LinearLayout>
